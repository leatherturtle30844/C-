	      cout << "\nFazendeiro Wylker:  " << "está no lado Esquerdo do RIO\n" << endl;
	      Wylker=0;
           }
        
    
    	 
    	 
    	 
 	  if (lobo2==3&&ovelha1==3&&repolho3==0){
			  cout<<"BaH!! O lobo encheu a barriga, vamos tentar novamente.";
			  
		  }
		  if (repolho3==3&&ovelha1==3&&lobo2==0){
			  cout<<"BaH!! A ovelha encheu a barriga, vamos tentar novamente.";
			  
		  }
		   if (lobo2==0&&ovelha1==0&&repolho3==3){
			  cout<<"BaH!! O lobo encheu a barriga, vamos tentar novamente.";
			  
		  }
		  if (repolho3==0&&ovelha1==0&&lobo2==3){
			  cout<<"BaH!! A ovelha encheu a barriga, vamos tentar novamente.";
			  
		  }
		  
  // Verifica se o jogo foi finalizado com sucesso
   if (ovelha1 == 3&&lobo2 == 3&&repolho3 == 3) {
   	system("cls");
                cout << "Parabéns! Você finalizou o jogo com sucesso.\n";
                jogoFinalizado = true;
                _exit(0);
                break;
}   
			}
            case 2:
                while (true) {
                	system("cls");
                    cout << "Escolha uma cor:\n";
                    cout << "1. Azul\n";
                    cout << "2. Verde\n";
                    cout << "3. Vermelho\n";
                    cout << "4. Amarelo\n";
                    cin >> escolha;


	switch (escolha) {
                        case 1:
                            changeColor(9);
                            system("cls");
                            break;
                        case 2:
                            changeColor(10);
                            system("cls");
                            break;
                        case 3:
                            changeColor(12);
                            system("cls");
                            break;
                        case 4:
                            changeColor(14); 
                            system("cls");
                            break;
                        default:
                            cout << "Opcao invalida. Tente novamente.\n";
                            break;
                    }

                    if (escolha >= 1 && escolha <= 4) {
                        break;
                    }
                }
                break;

            case 3:
                cout << "Obrigado por jogar! Até a proxima!\n";
                return 0;

            default:
                cout << "Opcao invalida. Tente novamente.\n";
                system("cls");
                break;
        }
    }

    return 0;
}
			

  




