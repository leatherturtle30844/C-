	cout << "\n";
	cout << "\n";
	cout << "\n";
     int opcao;
    cout << "Digite o número do item que deseja levar: ";
    cin >> opcao;

    switch (opcao) {
        case 1: // Ovelha
            if (Fazendeiro == 0) {
                cout << "\nVocê levou a ovelha para o lado final do rio.\n";
                Fazendeiro = 1;
            } else {
                cout << "\nVocê não pode levar a ovelha sozinha para o lado inicial do rio!\n";
            }
            break;

        case 2: // Alface
            if (Fazendeiro == 0) {
                cout << "\nVocê levou o alface para o lado final do rio.\n";
                Fazendeiro = 1;
            } else {
                cout << "\nVocê levou o alface para o lado inicial do rio.\n";
                Fazendeiro = 0;
            }
            break;

        case 3: // Lobo
            if (Fazendeiro == 0) {
                cout << "\nVocê não pode deixar o lobo sozinho com a ovelha!\n";
            } else {
                cout << "\nVocê levou o lobo para o lado final do rio.\n";
                Fazendeiro = 1;
            }
            break;

        default:
            cout << "\nOpção inválida!\n";
    }
}
  

